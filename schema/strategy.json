{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "strategy.json",
  "title": "Strategy",
  "description": "A yearn strategy",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "descriptionMarkdown": {
      "type": "string",
      "format": "uri"
    },
    "authorName": {
      "type": "string"
    },
    "authorUri": {
      "type": "string",
      "format": "uri"
    },
    "diagramUri": {
      "type": "string",
      "format": "uri"
    },
    "inputToken": {
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "format": "address"
        },
        "description": {
          "type": "string"
        },
        "descriptionMarkdown": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["address", "description", "descriptionMarkdown"]
    }
  },
  "required": [
    "name",
    "description",
    "descriptionMarkdown",
    "authorName",
    "authorUri",
    "diagramUri",
    "inputToken"
  ]
}
